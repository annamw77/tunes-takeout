<div id = "suggestion-wrapper">
  <div id = "food-suggestion">
    This Food: <br>
    <%= link_to food_suggestion.name, food_suggestion.url %>
    <br>
    <%= image_tag food_suggestion.image_url %>
  </div>

  <div id = "music-suggestion">
    This <%= music_suggestion.type %>: <br>
    <%= link_to music_suggestion.name, music_suggestion.url %>
    <br>
    <%= image_tag music_suggestion.image_url, height: '100', width: '100' %>
  </div>

  <% if session["user_id"].nil? == false %>
    <%= link_to "Favorite", favorite_path(:suggestion_id => suggestion_id), :method => :post %>
    <%= link_to "Unfavorite", unfavorite_path(:suggestion_id => suggestion_id), :method => :delete %>
  <% end %>
</div>
